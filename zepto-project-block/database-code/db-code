-- Select your database (replace zeptodb with your DB name)
USE zeptodb;

-- Create Product table if not exists
CREATE TABLE IF NOT EXISTS Product (
  id INT AUTO_INCREMENT PRIMARY KEY,
  name VARCHAR(255) NOT NULL,
  image VARCHAR(255),
  price INT,
  addedBy VARCHAR(255)
);

